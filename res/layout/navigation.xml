<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="85dip"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <RelativeLayout 
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:id="@+id/relative_waimai">
                <ImageView 
                     android:id="@+id/img_local_fruit" 
                     android:layout_width="55.0dip" 
                     android:layout_height="55.0dip" 
                     android:layout_centerHorizontal="true"
                     android:src="@drawable/loacl_fruit" />
                <TextView 
                     android:textSize="16.0sp" 
                     android:textColor="@color/dark_grey" 
                     android:layout_width="wrap_content" 
                     android:layout_height="wrap_content" 
                     android:text="本地水果" 
                     android:layout_alignParentBottom="true" 
                     android:layout_centerHorizontal="true" />
        </RelativeLayout>
        <RelativeLayout 
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_width="0dp">
                <ImageView 
                     android:id="@+id/img_import_fruit" 
                     android:layout_width="55.0dip" 
                     android:layout_height="55.0dip" 
                     android:layout_centerHorizontal="true"
                     android:src="@drawable/import_fruit" />
                <TextView 
                     android:textSize="16.0sp" 
                     android:textColor="@color/dark_grey" 
                     android:layout_width="wrap_content" 
                     android:layout_height="wrap_content" 
                     android:text="进口水果" 
                     android:layout_alignParentBottom="true" 
                     android:layout_centerHorizontal="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >
                <TextView
                android:id="@+id/center_action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="活动专区"
                android:textColor="@color/dark_grey"
                android:textSize="16.0sp" />

                <ImageView
                    android:id="@+id/img_group"
                    android:layout_width="55.0dip"
                    android:layout_height="55.0dip"
                    android:layout_alignParentTop="true"
                    android:layout_alignRight="@+id/center_action"
                    android:src="@drawable/center_action" />

        </RelativeLayout>

        <RelativeLayout 
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_width="0dp">
                <ImageView 
                     android:id="@+id/img_taste" 
                     android:layout_width="55.0dip" 
                     android:layout_height="55.0dip" 
                     android:layout_centerHorizontal="true"
                     android:src="@drawable/taste" />
                <TextView 
                     android:textSize="16.0sp" 
                     android:textColor="@color/dark_grey" 
                     android:layout_width="wrap_content" 
                     android:layout_height="wrap_content" 
                     android:text="我要试吃" 
                     android:layout_alignParentBottom="true" 
                     android:layout_centerHorizontal="true" />
        </RelativeLayout>
    </LinearLayout>  
    

    <View 
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line"
        android:layout_marginTop="4dp"/>
      <LinearLayout 

                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="5dip"
                    android:layout_marginTop="20dip"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="猜你喜欢" />

                    <TextView
                        android:id="@+id/tv_load_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="正在努力加载中" />

                    <ListView
                        android:id="@+id/lv_like_shop"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dip"
                        android:layout_marginRight="5dip"
                        android:layout_marginTop="5dip"
                        android:background="@color/bg_gray"
                        android:cacheColorHint="#00000000"
    					android:listSelector="#00000000"  />
                </LinearLayout>
           
</LinearLayout>